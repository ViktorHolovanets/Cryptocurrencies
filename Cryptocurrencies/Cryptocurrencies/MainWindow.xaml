<Window x:Class="Cryptocurrencies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top">
            <Button Content="Home" Command="{Binding NavigateCommand}" CommandParameter="Home"  Width="50" Height="50" />
            <Button Content="Info" Command="{Binding NavigateCommand}" CommandParameter="Info"  Width="50" Height="50" />
        </WrapPanel>
        
        <Frame x:Name="MainFrame" Content="{Binding Frame}" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
